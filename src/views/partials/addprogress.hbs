<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Progress</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
        <form action="/MyBooks/addprogress/{{Libro.IdBook}}" method="POST">
            
            <div class="form-group">
                <input type="text" class="form-control" placeholder="Percentage" name="Percentage">
            </div>
            <div class="form-group">  
                <textarea name="comment" id=""  rows="2" class="form-control" placeholder="Comment"></textarea>
            </div>
            <div class="form-group">  
                <button class="btn btn-success btn-block">Save</button>
            </div>
        </form>


    </div>
  </div>
</div>